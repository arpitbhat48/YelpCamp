<%- include("../partials/header") %> 


 <!-- header for the page -->
<div class="container">
	<header class="jumbotron">
		<div class="container">
			<h1>Welcome to Campgrounds Page</h1>
			<p>
				View the best Campgrounds from all over the world
			</p>
			<a type="button" class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campgrounds</a>
	
		</div>
	</header>

	<div class="row" style="display: flex; flex-wrap: wrap;">
		<% campgrounds.forEach(function(camp){ %>
				<div class="col-sm-6 col-md-3 col-lg-3 mb-4">
					<div class="card">
						<img src = "<%= camp.image %>" class="card-img-top">
						<div class="card-title">
							<h4>
								<%= camp.name  %> 
							</h4>
						</div>
						<p class="card-link">
							<a href="/campgrounds/<%= camp._id %>" class="btn btn-primary">More Info</a>
						</p>
					</div>
				</div>	
		<% }); %> 
	</div>
</div>


<%- include("../partials/footer") %> 